<body class="d-flex align-items-center justify-content-center flex-column">
  <div id="logindiv" class="container px-4 py-3">
    <h2 id="logofont" class="my-4" style="text-align: center;">Igram</h2>
    <hr>
      <form action="/login" method="post">
        <h4 class="mb-3" style="text-align: center;">LOGIN</h4>
        <div class="mb-3">
          <input autocomplete="off" type="text" placeholder="Enter username" name="username" class="form-control rounded-0"
            id="exampleInputPassword1">
        </div>
        <div class="mb-3">
          <input type="password" placeholder="Password" name="password" class="form-control rounded-0" id="exampleInputPassword1">
        </div>
        <div class="d-grid gap-2 mb-2">
          <button class="btn btn-outline-primary rounded-0" type="submit">Login</button>
        </div>
        <a class="text-decoration-none" m-auto href="/forgot">Forgot Password</a>
      </form>
  </div>
  <div id="logindiv" class="container d-flex align-items-center justify-content-center px-4 py-3 mt-3" style="font-size: 14px;">
    Don't have an account?&nbsp; <a style="text-decoration: none; font-size: 14px; font-weight: 500;" href="/register"> Sign up</a>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
</body>
</html>